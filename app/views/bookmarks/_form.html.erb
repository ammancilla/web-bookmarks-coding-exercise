<%= form_for @bookmark, html: { class: 'form' } do |f| %>
  <% if @bookmark.errors.any? %>
    <div class="alert alert-danger">
      <h4>
        <%= pluralize(@bookmark.errors.count, "error") %> prohibited
        this bookmark from being saved:
      </h4>
      <ul>
        <% @bookmark.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag :title, 'Title', class: 'sr-only' %>
    <%= f.text_field :title, placeholder: 'Title', class: 'form-control ' %>
  </div>

  <div class="form-group">
    <%= label_tag :url, 'url', class: 'sr-only' %>
    <%= f.url_field :url, placeholder: 'Url', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :shortening, 'Shortening', class: 'sr-only' %>
    <%= f.url_field :shortening, placeholder: 'Shortening', class: 'form-control' %>
  </div>

  <%= submit_tag 'Save', class: 'btn btn-primary' %>
<% end %>
