<%= form_tag search_path, method: :get, class: 'form-inline', align: 'center' do %>

  <div class="form-group">
    <%= label_tag :title, 'Title', class: 'sr-only' %>
    <%= text_field_tag :title, @title, placeholder: 'Title', class: 'form-control w-50' %>
  </div>

  <div class="form-group">
    <%= label_tag :url, 'url', class: 'sr-only' %>
    <%= text_field_tag :url, @url, placeholder: 'Url', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :shortening, 'Shortening', class: 'sr-only' %>
    <%= text_field_tag :shortening, @shortening, placeholder: 'Shortening', class: 'form-control' %>
  </div>

  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>
